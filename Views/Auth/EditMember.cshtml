@model WebApp.Models.Member

<h2 class="text-center mb-4">Sửa thành viên</h2>

<form asp-action="EditMember" method="post" class="container">
    <input type="hidden" asp-for="MemberId" />
    
    <div class="form-group mb-3">
        <label for="email" class="form-label">Email:</label>
        <input asp-for="Email" class="form-control" id="email" placeholder="Nhập email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="password" class="form-label">Password:</label>
        <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Nhập mật khẩu" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="name" class="form-label">Name:</label>
        <input asp-for="Name" class="form-control" id="name" placeholder="Nhập tên" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="givenName" class="form-label">Given Name:</label>
        <input asp-for="GivenName" class="form-control" id="givenName" placeholder="Nhập tên đệm" required />
        <span asp-validation-for="GivenName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="surname" class="form-label">Surname:</label>
        <input asp-for="Surname" class="form-control" id="surname" placeholder="Nhập họ" required />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Cập nhật</button>
    </div>
</form>

