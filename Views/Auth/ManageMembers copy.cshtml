@model IEnumerable<WebApp.Models.Member>

<h2 class="text-center">Quản lý thành viên</h2>
<div class="table-responsive vh-md-60">
    <table class="table table-bordered table-hover table-nowrap table-vcenter table-input ">
        <thead>
            <tr >
                <th>Email</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                        <tr>
                            <td>@member.Email</td>
                            <td>@member.Name</td>
                            <td>
                                <a asp-action="EditMember" asp-route-id="@member.MemberId">Sửa</a>
                                |
                                <a asp-action="DeleteMember" asp-route-id="@member.MemberId" onclick="return confirm('Bạn có chắc chắn muốn xóa thành viên này không?');">Xóa</a>
                            </td>
                        </tr>
            }
        </tbody>
    </table>
</div>
<a asp-action="CreateMember">Thêm thành viên mới</a>
