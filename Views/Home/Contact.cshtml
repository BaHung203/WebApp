@model WebApp.Models.YeuCauDinhGia
@{
    ViewData["Title"] = "Contact";
}
<div class="section">
    <div class="container">
    <div class="row">
        <div
        class="col-lg-4 mb-5 mb-lg-0"
        data-aos="fade-up"
        data-aos-delay="100"
        >
        <div class="contact-info">
            <div class="address mt-2">
            <i class="icon-room"></i>
            <h4 class="mb-2">Location:</h4>
            <p>
                43 Raymouth Rd. Baltemoer,<br />
                London 3910
            </p>
            </div>

            <div class="open-hours mt-4">
            <i class="icon-clock-o"></i>
            <h4 class="mb-2">Open Hours:</h4>
            <p>
                Sunday-Friday:<br />
                11:00 AM - 2300 PM
            </p>
            </div>

            <div class="email mt-4">
            <i class="icon-envelope"></i>
            <h4 class="mb-2">Email:</h4>
            <p>info@Untree.co</p>
            </div>

            <div class="phone mt-4">
            <i class="icon-phone"></i>
            <h4 class="mb-2">Call:</h4>
            <p>+1 1234 55488 55</p>
            </div>
        </div>
        </div>
        <div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">
                @if (ViewBag.Message != null)
                            {
                                <div class="alert alert-success mt-3">
                                    @ViewBag.Message
                                </div>
                            }
                <form asp-action="Contact" method="post">
                    <!-- Mã yêu cầu -->
                    <div class="col-12 mb-3">
                        <label asp-for="MaYC" class="form-label">Mã yêu cầu</label>
                        <input
                            
                            asp-for="MaYC"
                            class="form-control"
                            placeholder="Nhập mã yêu cầu"
                            required
                        />
                        <span asp-validation-for="MaYC" class="text-danger"></span>
                    </div>

                    <!-- Mã khách hàng -->
                    <div class="col-12 mb-3">
                        <label asp-for="MaKH" class="form-label">Mã khách hàng</label>
                        <input
                            
                            asp-for="MaKH"
                            class="form-control"
                            placeholder="Nhập mã khách hàng"
                            required
                        />
                        <span asp-validation-for="MaKH" class="text-danger"></span>
                    </div>

                    <!-- Thời gian yêu cầu -->
                    <div class="col-12 mb-3">
                        <label asp-for="ThoiGianYC" class="form-label">Thời gian yêu cầu</label>
                        <input
                            type="datetime-local"
                            asp-for="ThoiGianYC"
                            class="form-control"
                            placeholder="Nhập thời gian yêu cầu"
                            
                        />
                        <span asp-validation-for="ThoiGianYC" class="text-danger"></span>
                    </div>

                    <!-- Trạng thái -->
                    <div class="col-12 mb-3">
                        <label asp-for="Trangthai" class="form-label">Trạng thái</label>
                        <input
                            type="text"
                            asp-for="Trangthai"
                            class="form-control"
                            placeholder="Nhập trạng thái"
                            required
                        />
                        <span asp-validation-for="Trangthai" class="text-danger"></span>
                    </div>
                       
                    <!-- Nút gửi yêu cầu -->
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Gửi yêu cầu</button>
                    </div>
                </form>

            </div>
    </div>
    </div>
    
</div>